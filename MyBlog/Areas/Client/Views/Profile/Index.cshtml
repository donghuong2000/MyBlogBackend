
@{
    ViewData["Title"] = "Profile";
}

<div class="body-blog">
    <div class="advangtade">

    </div>
    <div class="container">
        <div class="author d-flex align-items-center">
            <img class="avatar-lg mx-5" src="~/Media/@ViewBag.user.AvatarUrl" alt="">
            <div>
                <h2>@ViewBag.user.Name</h2>
                <h4 class=" text-muted">@ViewBag.user.UserName</h4>
            </div>

        </div>
    </div>
    <div class="container border-top">
        <ul class="nav nav-pills my-2" id="pills-tab" role="tablist">

            <li class="nav-item black-text">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
            </li>
            <li class="nav-item black-text">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</a>
            </li>
            <li class="nav-item black-text">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Question</a>
            </li>
            <li class="nav-item black-text">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Answer</a>
            </li>

        </ul>
        <div class="tab-content mt-3" id="pills-tabContent">


            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="border">
                    <div class="inner-tab">
                        <a class="btn btn-dark my-4" href=""> Tạo Bài Viết</a>

                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Content</th>
                                        <th>Date</th>
                                        <th>Tags</th>
                                        <th>Comfirm</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Title</th>
                                        <th>Content</th>
                                        <th>Date</th>
                                        <th>Tags</th>
                                        <th>Comfirm</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                </div>

            </div>


            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <partial name="_UpdateProfile" model="ViewBag.UpdateProfilemodel"/>
            </div>
            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
        </div>
    </div>

</div>


@section Header{
    <link href="~/js/build/toastr.css" rel="stylesheet" />
}

@section Scripts{


    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- cái này là của thông báo-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/js/build/toastr.min.js"></script>
    <script src="~/js/profile.js"></script>
}



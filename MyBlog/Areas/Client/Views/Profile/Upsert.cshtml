@model MyBlog.Models.ViewModels.PostViewModel
@{
    ViewData["Title"] = "UpSert";
    var tt = "Create Post";
}

<div class="container">
    <form method="post">
        <div class="row p-3 border">
            @{
                if (Model.Post.ID != 0)
                {
                    tt = "Edit Post";
                }
                <input type="hidden" asp-for="Post.ID" />
            }
            <div class="col-12 border-bottom">

                <h2 class="text-primary">@tt</h2>
            </div>
            <div class="col-12 pt-4">
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="Post.Title"></label>
                    </div>
                    <div class="col-12">
                        <input style=" width:100%" asp-for="Post.Title" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="TagSelected"></label>
                    </div>
                    <div class="col-12">
                        <select style=" width:100%" asp-for="TagSelected" class="mutipleSelect form-control" multiple asp-items="@ViewBag.list">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="Post.Content"></label>
                    </div>
                    <div class="col-12">
                        <textarea style=" width:100%; min-height:300px" asp-for="Post.Content" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        @if (Model.Post.ID != 0)
                        {
                            <partial name="_EditAndBackPartialView" model="Model.Post.ID" />
                        }
                        else
                        {
                            <partial name="_CreateAndBackPartialView" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/lib/mutiselect-plugin/js/select2.min.js"></script>
    <script src="~/Admin/js/dropdown.js"></script>
    <script src="~/js/tinymce/tinymce.min.js"></script>


    <script>


        tinymce.init({
            selector: "textarea",
            plugins: 'advlist autolink link image lists charmap preview imagetools wordcount media',
            toolbar: "link | image | preview ",
            images_upload_url: '/Client/Profile/Upload',
            automatic_uploads: false,
            images_reuse_filename: true,
            images_upload_base_path: '/Media/'
        });




    </script>
}
@section Header
{

    <link href="~/lib/mutiselect-plugin/css/select2.min.css" rel="stylesheet" />

}


